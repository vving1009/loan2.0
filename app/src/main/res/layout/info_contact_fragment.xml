<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded,RelativeOverlap,SmallSp,RtlSymmetry">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_blue"
        android:gravity="center|left"
        android:paddingLeft="14dp"
        android:text="@string/loan_auth_contact_family"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/layout_family_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_ic_name"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_name"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />

    <RelativeLayout
        android:id="@+id/layout_family"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_ic_relation"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_contact_family"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_family"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />

    <RelativeLayout
        android:id="@+id/layout_family_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_phone_ic_phone"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_contact_phone"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_family_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_blue"
        android:gravity="center|left"
        android:paddingLeft="14dp"
        android:text="@string/loan_auth_contact_friend"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/layout_friend_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_ic_name"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_name"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />

    <RelativeLayout
        android:id="@+id/layout_friend"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_ic_relation"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_contact_friend"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />

    <RelativeLayout
        android:id="@+id/layout_friend_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/loan_auth_phone_ic_phone"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/loan_auth_contact_phone"
            android:textColor="@color/color_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/text_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_black_light"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_gray_dark" />
</LinearLayout>