<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_light"
    tools:ignore="ContentDescription,RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/credit_loan_ad_bg" />

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-15dp"
            android:background="@drawable/home_layout_bg_top"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginRight="78dp"
                android:layout_marginTop="24dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_gray_dark_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="申请资料"
                    android:textColor="@color/color_gray_dark_2"
                    android:textSize="15sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/credit_loan_ic_need_1"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|left"
                android:includeFontPadding="false"
                android:text="信用卡"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/car_loan_ic_need_2"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|left"
                android:includeFontPadding="false"
                android:text="电商账号"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/car_loan_ic_need_3"
                android:drawablePadding="12dp"
                android:gravity="center_vertical|left"
                android:includeFontPadding="false"
                android:text="实名制手机号"
                android:textColor="@color/color_gray"
                android:textSize="12sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="78dp"
                android:layout_marginRight="78dp"
                android:layout_marginTop="27dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_gray_dark_2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/color_white"
                    android:gravity="center"
                    android:text="申请流程"
                    android:textColor="@color/color_gray_dark_2"
                    android:textSize="15sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:layout_marginTop="24dp"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@drawable/credit_loan_ic_process_1"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:text="额度预估"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/car_loan_ic_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@drawable/credit_loan_ic_process_2"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:text="额度确认"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/car_loan_ic_arrow" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="12dp"
                    android:drawableTop="@drawable/credit_loan_ic_process_3"
                    android:gravity="center_horizontal|top"
                    android:includeFontPadding="false"
                    android:text="借款成功"
                    android:textColor="@color/color_gray"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_apply"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@drawable/home_btn_bg"
            android:text="立即申请"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>