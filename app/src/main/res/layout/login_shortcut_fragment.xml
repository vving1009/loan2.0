<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    tools:ignore="ContentDescription,RtlHardcoded,RelativeOverlap">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_hole" />

    <com.jiaye.cashloan.widget.LoanEditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/input_phone"
        android:inputType="phone"
        android:maxLength="11"
        app:editHeight="28dp"
        app:icon="@drawable/login_ic_phone"
        app:inputMarginLeft="30dp"
        app:request_force="true"
        app:underlineLength="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_hole" />

    <com.jiaye.cashloan.widget.LoanEditText
        android:id="@+id/edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/input_login_verification"
        android:inputType="number"
        app:editHeight="28dp"
        app:enable_verification="true"
        app:icon="@drawable/login_ic_code"
        app:inputMarginLeft="30dp"
        app:underlineLength="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_hole" />

    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.jiaye.cashloan.widget.LoanEditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/input_login_password"
            app:editHeight="28dp"
            app:enable_verification="true"
            app:icon="@drawable/login_ic_password"
            app:inputMarginLeft="30dp"
            app:underlineLength="0dp"
            app:verification_type="3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_gray_hole" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="@drawable/step_btn"
        android:text="@string/login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>