<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:ignore="ContentDescription,RtlHardcoded,RelativeOverlap">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="91dp"
        android:src="@drawable/login_ic_logo" />

    <com.jiaye.cashloan.widget.LoanEditText
        android:id="@+id/edit_phone"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        android:hint="@string/input_phone"
        android:inputType="phone"
        android:maxLength="11"
        app:editHeight="28dp"
        app:enable_verification="true"
        app:icon="@drawable/auth_ic_phone"
        app:iconMarginLeft="2dp"
        app:request_force="true"
        app:underLineColor="@color/color_blue"
        app:underlineLength="227dp" />

    <com.jiaye.cashloan.widget.LoanEditText
        android:id="@+id/edit_code"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="41dp"
        android:hint="@string/input_login_verification"
        android:inputType="number"
        app:editHeight="28dp"
        app:icon="@drawable/auth_ic_password"
        app:underLineColor="@color/color_blue"
        app:underlineLength="227dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="280dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/step_btn"
        android:enabled="false"
        android:text="@string/login_login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>