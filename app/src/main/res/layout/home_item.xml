<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_card"
    android:layout_width="310dp"
    android:layout_height="210dp"
    android:background="@drawable/home_bg_card"
    tools:ignore="RtlHardcoded,ContentDescription,SmallSp,UseCompoundDrawables">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/img_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home_ic_label_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:ems="2"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="@string/home_card_label"
            android:textColor="@android:color/white"
            android:textSize="9sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="34dp"
        android:text="@string/home_card_amount_title"
        android:textColor="@color/color_black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/text_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_amount_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <View
        android:id="@+id/line_horizontal"
        android:layout_width="200dp"
        android:layout_height="1px"
        android:layout_below="@id/text_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/color_gray" />

    <View
        android:id="@+id/line_vertical"
        android:layout_width="1px"
        android:layout_height="20dp"
        android:layout_below="@id/line_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:background="@color/color_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_horizontal"
        android:layout_marginLeft="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_card_deadline_title"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line_horizontal"
        android:layout_marginRight="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/home_card_payment_method"
            android:textColor="@color/color_black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/text_payment_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>