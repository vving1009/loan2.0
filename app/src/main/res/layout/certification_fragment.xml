<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_step_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/certification_ic_step_1"
            android:gravity="center"
            android:text="车辆评估"
            android:textColor="#989898"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_step_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/certification_ic_step_2"
            android:gravity="center"
            android:text="信用评估"
            android:textColor="#989898"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_step_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/certification_ic_step_3"
            android:gravity="center"
            android:text="车辆进抵"
            android:textColor="#989898"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_step_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:drawableTop="@drawable/certification_ic_step_4"
            android:gravity="center"
            android:text="等待放款"
            android:textColor="#989898"
            android:textSize="15sp" />

    </LinearLayout>

    <com.jiaye.cashloan.widget.NoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>