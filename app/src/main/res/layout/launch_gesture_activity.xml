<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <FrameLayout
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_back" />
        </FrameLayout>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launch_gesture"
            android:layout_centerInParent="true"
            android:textColor="@color/color_black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:background="@color/color_gray_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_gesture" />

    <com.syd.oden.gesturelock.view.GestureLockViewGroup
        android:id="@+id/gesture_view"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:color_finger_on="@color/color_blue"
        app:color_no_finger="@color/color_black_light"
        app:count="3" />

    <TextView
        android:id="@+id/text_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_black_light"
        android:textSize="14sp" />

</LinearLayout>